using Gtk 4.0;
using Adw 1;

template $FlowtimeTimerPage : Adw.Bin {
  halign: center;
  valign: baseline_center;
  vexpand: true;


  Box {
    spacing: 30;
    orientation: vertical;

    Box {
      orientation: vertical;
      valign: start;
      vexpand: true;

      Label stage_label {
        styles ["accent", "heading"]
      }

      Label time_label {
        label: "00:00";
        styles ["time-label", "numeric"]
      }
    }

    Box {
      orientation: horizontal;
      halign: center;
      valign: start;
      spacing: 6;

      Button pause_button {
        icon-name: "media-playback-start-symbolic";
        halign: center;
        action-name: "timer-page.pause";

        styles ["suggested-action", "circular", "large-button"]
      }

      Button next_button {
        icon-name: "media-seek-forward-symbolic";
        valign: center;
        action-name: "timer-page.next";

        styles ["circular", "not-so-large-button"]
      }
    }
  }
}